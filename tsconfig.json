{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module":"esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "strict": false,
    "sourceMap": true,
    "jsx": "preserve",
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "baseUrl": "",
    "skipLibCheck": true,
    "paths": {
      "html2canvas/dist/lib/*": ["node_modules/html2canvas/dist/types/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
